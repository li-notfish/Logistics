<MNavigationDrawer Value="Value"
                   ValueChanged="ValueChanged"
                   Id="@ElementId"
                   App
                   Floating
                   Width="300"
                   Clipped>
    <MListItem>
            <MListItemContent>
                <MListItemTitle class="text-h6" Style="text-align:center">
                    物流配送管理系统
                </MListItemTitle>
            </MListItemContent>
        </MListItem>
    <MDivider></MDivider>
    <MList Class="doc-list-nav">
           <MListItem Exact
           Class="m-list-item--default" Href="/">
               <MListItemIcon>
                   <MIcon>mdi-home
                   </MIcon>
               </MListItemIcon>
               <MListItemContent>
                    <MListItemTitle>主页</MListItemTitle>
               </MListItemContent>
           </MListItem>
            <MListItem Exact
           Class="m-list-item--default" Href="/admin/">
               <MListItemIcon>
                   <MIcon>admin_panel_settings
                   </MIcon>
               </MListItemIcon>
               <MListItemContent>
                    <MListItemTitle>管理员管理</MListItemTitle>
               </MListItemContent>
           </MListItem>
            <MListItem Exact
           Class="m-list-item--default" Href="/order/">
               <MListItemIcon>
                   <MIcon>local_offer
                   </MIcon>
               </MListItemIcon>
               <MListItemContent>
                    <MListItemTitle>订单管理</MListItemTitle>
               </MListItemContent>
           </MListItem>
           <MListItem Exact
           Class="m-list-item--default" Href="/user/">
               <MListItemIcon>
                   <MIcon>person
                   </MIcon>
               </MListItemIcon>
               <MListItemContent>
                    <MListItemTitle>用户管理</MListItemTitle>
               </MListItemContent>
           </MListItem>
           <MListItem Exact
           Class="m-list-item--default" Href="/delivery/">
               <MListItemIcon>
                   <MIcon>delivery_dining
                   </MIcon>
               </MListItemIcon>
               <MListItemContent>
                    <MListItemTitle>派送员管理</MListItemTitle>
               </MListItemContent>
           </MListItem>
           <MListItem Exact Class="m-list-item-default" Href="/warehouse/">
                <MListItemIcon>
                    <MIcon>store
                    </MIcon>
                </MListItemIcon>
                <MListItemContent>
                    <MListItemTitle>仓库管理</MListItemTitle>
                </MListItemContent>
           </MListItem>
           <MListItem Exact Class="m-list-item-default" Href="/goods/">
                <MListItemIcon>
                    <MIcon>card_giftcard
                    </MIcon>
                </MListItemIcon>
                <MListItemContent>
                    <MListItemTitle>物品管理</MListItemTitle>
                </MListItemContent>
           </MListItem>
    </MList>
</MNavigationDrawer>

@code {
    [Parameter]
    public bool Value { get; set; }

    [Parameter]
    public EventCallback<bool> ValueChanged { get; set; }

    public string ElementId => "nav-drawer";

    protected override async Task OnParametersSetAsync()
    {
        await base.OnParametersSetAsync();

    }
}
