<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Logistics.AppClient.BarcodeReaderView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Logistics.AppClient.ViewModels"
    xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
    Title="扫码器"
    x:DataType="vm:BarcodeReaderViewModel">
    <Grid RowDefinitions="1*,3*,1*">

        <zxing:CameraBarcodeReaderView
            x:Name="barcodeView"
            Grid.Row="0"
            Grid.RowSpan="3"
            BarcodesDetected="BarcodesDetected"
            CameraLocation="Rear" />

        <Grid Grid.Row="0" BackgroundColor="#aa000000">
            <Label
                Grid.Row="2"
                HorizontalOptions="Center"
                Text="Top text..."
                TextColor="White"
                VerticalOptions="Center" />
        </Grid>

        <Grid
            Grid.Row="3"
            Padding="20"
            BackgroundColor="#aa000000"
            ColumnDefinitions="Auto,*,Auto">

            <Button
                Grid.Column="0"
                BackgroundColor="#aa000000"
                BorderColor="Black"
                Clicked="Close_Clicked"
                CornerRadius="8"
                Text="🔄️" />

            <zxing:BarcodeGeneratorView
                x:Name="barcodeGenerator"
                Grid.Column="1"
                BarcodeMargin="1"
                ForegroundColor="DarkBlue"
                Format="QrCode"
                HeightRequest="100"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="100"
                Value="Bla" />

            <Button
                Grid.Column="2"
                BackgroundColor="#aa000000"
                BorderColor="Black"
                Clicked="TorchButton_Clicked"
                CornerRadius="8"
                Text="💡" />
        </Grid>

    </Grid>
</ContentPage>